<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
<Page.actionBar>
	<ActionBar title="NYTPhotoViewer Demo">
    </ActionBar>
  </Page.actionBar>

<StackLayout>
  <Label text="Tap buttons to see NYTPhotoViewer in action" textWrap="true" margin="10,0,20,0"/>
  
  <Button text="Load remote images" tap="showRemoteImages" />
  <Button text="Load local images with NYTPhotoItem class" tap="showLocalImages" android:visibility="collapsed" />
  <Button text="Load local images with options" tap="showLocalImagesWithOptions" android:visibility="collapsed" />

</StackLayout>
</Page>
